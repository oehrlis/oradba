#################################################################################
# OraDBA DBCA Response File Template
# Oracle Database 19c - RAC (Real Application Clusters)
# 
# This template creates a RAC database suitable for high-availability
# clustered environments with shared storage.
#
# Usage:
#   dbca -silent -createDatabase -responseFile dbca_19c_rac.rsp
#
# Variables to customize (replace {{VARIABLE}} with actual values):
#   {{ORACLE_SID}}       - Database name (not SID in RAC)
#   {{ORACLE_HOME}}      - Oracle Home directory
#   {{ORACLE_BASE}}      - Oracle Base directory
#   {{ASM_DISKGROUP}}    - ASM disk group for data files
#   {{ASM_FRA_DISKGROUP}} - ASM disk group for FRA
#   {{DOMAIN}}           - Database domain
#   {{SYS_PASSWORD}}     - SYS password
#   {{SYSTEM_PASSWORD}}  - SYSTEM password
#   {{PDB_NAME}}         - Pluggable database name (if CDB)
#   {{MEMORY_MB}}        - Total SGA+PGA memory in MB (per node)
#   {{CHARSET}}          - Character set (AL32UTF8 recommended)
#   {{NCHARSET}}         - National character set (AL16UTF16)
#   {{NODELIST}}         - Comma-separated list of RAC nodes
#
# Note: Requires Oracle Clusterware and ASM to be configured
#################################################################################

[GENERAL]
RESPONSEFILE_VERSION = "19.0.0"
OPERATION_TYPE = "createDatabase"

[CREATEDATABASE]
#-----------------------------------------------------------------------------
# Database Identification
#-----------------------------------------------------------------------------
GDBNAME = "{{ORACLE_SID}}.{{DOMAIN}}"
SID = "{{ORACLE_SID}}"
DATABASECONFTYPE = "RAC"
TEMPLATENAME = "General_Purpose.dbc"
SYSPASSWORD = "{{SYS_PASSWORD}}"
SYSTEMPASSWORD = "{{SYSTEM_PASSWORD}}"

#-----------------------------------------------------------------------------
# RAC Configuration
#-----------------------------------------------------------------------------
NODELIST = {{NODELIST}}
INSTANCENAMEPREFIX = {{ORACLE_SID}}

#-----------------------------------------------------------------------------
# Container/Pluggable Database Settings
#-----------------------------------------------------------------------------
CREATEASCONTAINERDATABASE = true
NUMBEROFPDBS = 1
PDBNAME = "{{PDB_NAME}}"
PDBADMINPASSWORD = "{{SYSTEM_PASSWORD}}"
USELOCKUNDOFORTEMPFILE = true

#-----------------------------------------------------------------------------
# Storage Configuration (ASM)
#-----------------------------------------------------------------------------
STORAGETYPE = ASM
DISKGROUPNAME = "{{ASM_DISKGROUP}}"
RECOVERYGROUPNAME = "{{ASM_FRA_DISKGROUP}}"
RECOVERYSIZEINGB = 40

#-----------------------------------------------------------------------------
# File Locations
#-----------------------------------------------------------------------------
DATAFILEJARLOCATION = "{{ORACLE_HOME}}/assistants/dbca/templates/"

#-----------------------------------------------------------------------------
# Memory Configuration (Per Node)
#-----------------------------------------------------------------------------
TOTALMEMORY = "{{MEMORY_MB}}"
MEMORYPERCENTAGE = ""

#-----------------------------------------------------------------------------
# Character Sets
#-----------------------------------------------------------------------------
CHARACTERSET = "{{CHARSET}}"
NATIONALCHARACTERSET = "{{NCHARSET}}"

#-----------------------------------------------------------------------------
# Network Configuration
#-----------------------------------------------------------------------------
LISTENERS = "LISTENER"
REGISTERWITHDIRSERVICE = false

#-----------------------------------------------------------------------------
# Database Options
#-----------------------------------------------------------------------------
SAMPLESCHEMA = false
DATABASETYPE = "MULTIPURPOSE"

#-----------------------------------------------------------------------------
# Initialization Parameters (RAC-specific)
#-----------------------------------------------------------------------------
INITPARAMS = "db_name={{ORACLE_SID}}","db_domain={{DOMAIN}}","audit_trail=DB,EXTENDED","diagnostic_dest={{ORACLE_BASE}}","dispatchers=(PROTOCOL=TCP) (SERVICE={{ORACLE_SID}}XDB)","open_cursors=300","processes=500","remote_login_passwordfile=EXCLUSIVE","undo_tablespace=UNDOTBS1","cluster_database=TRUE","db_create_file_dest=+{{ASM_DISKGROUP}}","db_recovery_file_dest=+{{ASM_FRA_DISKGROUP}}"

#-----------------------------------------------------------------------------
# Oracle Managed Files (OMF)
#-----------------------------------------------------------------------------
USEDATABASEFILEINI_PARAMETERS = true

#-----------------------------------------------------------------------------
# Database Vault & Label Security (Enterprise Edition)
#-----------------------------------------------------------------------------
DVOWNERNAME = ""
DVOWNERPASSWORD = ""
DVACCOUNTMANAGERNAME = ""
DVACCOUNTMANAGERPASSWORD = ""
OLSOWNERNAME = ""
OLSOWNERPASSWORD = ""

#-----------------------------------------------------------------------------
# Automatic Maintenance Tasks
#-----------------------------------------------------------------------------
ENABLEARCHIVE = true
ARCHIVELOGMODE = true

#-----------------------------------------------------------------------------
# Additional Options
#-----------------------------------------------------------------------------
EMCONFIGURATION = "NONE"
EMEXPRESSPORT = 5500
RUNMVUPDATESCRIPTS = true
ENABLEAUTOMATICMAINTENANCE = true
