# ==============================================================================
# Section: [DEFAULT]
# Applied to all environments regardless of product type
# ==============================================================================

[DEFAULT]

# Editor and terminal settings
export EDITOR=vi
export VISUAL=vi
export ORACLE_TERM=xterm

# NLS settings (default for all products)
export NLS_LANG="AMERICAN_AMERICA.AL32UTF8"
export NLS_DATE_FORMAT="YYYY-MM-DD HH24:MI:SS"
export NLS_TIMESTAMP_FORMAT="YYYY-MM-DD HH24:MI:SS.FF"

# Default aliases (available in all environments)
alias ll='ls -la'
alias h='history'
alias c='clear'

# ==============================================================================
# Section: [RDBMS]
# Applied only to Oracle Database (RDBMS) environments
# ==============================================================================

[RDBMS]

# TNS and SQL settings
export TNS_ADMIN="${ORACLE_HOME}/network/admin"
export SQLPATH="${ORADBA_BASE}/sql:${ORACLE_HOME}/rdbms/admin"
export TWO_TASK=""

# Oracle specific
export ORACLE_PATH="${ORADBA_BASE}/sql"
export ORACLE_DOC="${ORACLE_HOME}/doc"

# Database aliases
alias sqlplus='sqlplus -L'
alias sqldba='sqlplus / as sysdba'
alias rman='rman target /'
alias dgmgrl='dgmgrl /'

# Navigation aliases
alias dbs='cd ${ORACLE_HOME}/dbs'
alias admin='cd ${ORACLE_BASE}/admin'
alias diag='cd ${ORACLE_BASE}/diag'
alias trace='cd ${ORACLE_BASE}/diag/rdbms/${ORACLE_SID,,}/${ORACLE_SID}/trace'
alias alert='tail -f ${ORACLE_BASE}/diag/rdbms/${ORACLE_SID,,}/${ORACLE_SID}/trace/alert_${ORACLE_SID}.log'

# ==============================================================================
# Section: [CLIENT]
# Applied to full Oracle Client installations
# ==============================================================================

[CLIENT]

# Client-specific paths
export TNS_ADMIN="${ORACLE_HOME}/network/admin"
export SQLPATH="${ORADBA_BASE}/sql"
export TWO_TASK=""

# Client aliases
alias sqlplus='sqlplus -L'
alias tnsping='tnsping'

# ==============================================================================
# Section: [ICLIENT]
# Applied to Oracle Instant Client installations
# ==============================================================================

[ICLIENT]

# Instant Client specific
export TNS_ADMIN="${ORADBA_BASE}/network/admin"
export SQLPATH="${ORADBA_BASE}/sql"
export NLS_LANG="AMERICAN_AMERICA.AL32UTF8"

# Ensure library path is set (handled by builder, but can be overridden)
# export LD_LIBRARY_PATH="${ORACLE_HOME}:${LD_LIBRARY_PATH}"

# Instant Client aliases
alias sqlplus='sqlplus -L'

# ==============================================================================
# Section: [GRID]
# Applied to Grid Infrastructure environments
# ==============================================================================

[GRID]

# Grid specific
export ORACLE_TERM=xterm
export GRID_HOME="${ORACLE_HOME}"

# Grid aliases
alias crsctl='crsctl'
alias asmcmd='asmcmd'
alias srvctl='srvctl'
alias crs='crsctl stat res -t'
alias asm='asmcmd'

# ==============================================================================
# Section: [MIDDLEWARE]
# Applied to middleware products (e.g., WebLogic, OUD when domain-based)
# ==============================================================================

[MIDDLEWARE]

# Domain/instance specific overrides can go here
# export DOMAIN_HOME="${ORACLE_HOME}/user_projects/domains/base_domain"
# export PATH="${ORACLE_HOME}/bin:${PATH}"

# ==============================================================================
# Section: [DATASAFE]
# Applied to Data Safe on-premises connector
# ==============================================================================

[DATASAFE]

# Data Safe specific settings
# export TNS_ADMIN="${ORACLE_HOME}/network/admin"
