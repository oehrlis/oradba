# ==============================================================================
# Section: [JAVA]
# Applied to Java-only installations
# ==============================================================================

[JAVA]

# Java-specific overrides
# export JAVA_HOME="${ORACLE_HOME}"
# export PATH="${JAVA_HOME}/bin:${PATH}"

# Navigation aliases
alias grid='cd ${GRID_HOME}'
alias gridtrace='cd ${GRID_HOME}/log/${HOSTNAME}'

# ==============================================================================
# Section: [ASM]
# Applied to ASM instances (+ASM*)
# ==============================================================================

[ASM]

# ASM specific
export ORACLE_SYSASM="TRUE"

# ASM aliases
alias asmcmd='asmcmd -p'
alias asmdba='sqlplus / as sysasm'

# ==============================================================================
# Section: [DATASAFE]
# Applied to Oracle Data Safe On-Premises Connector
# ==============================================================================

[DATASAFE]

# DataSafe specific
export DATASAFE_HOME="${ORACLE_HOME}"
export DATASAFE_CONFIG="${ORACLE_HOME}/config"
export DATASAFE_LOG="${ORACLE_HOME}/logs"

# DataSafe aliases
alias dsctl='${DATASAFE_HOME}/bin/datasafe-control'
alias dslogs='cd ${DATASAFE_LOG}'

# ==============================================================================
# Section: [OUD]
# Applied to Oracle Unified Directory instances
# ==============================================================================

[OUD]

# OUD specific
export OUD_INSTANCE_HOME="${ORACLE_HOME}/instances/${ORACLE_SID}"
export OUD_INSTANCE_CONFIG="${OUD_INSTANCE_HOME}/OUD/config"

# OUD aliases
alias oudctl='${ORACLE_HOME}/bin/dsconfig'
alias oudstatus='${ORACLE_HOME}/bin/status'
alias oudlogs='cd ${OUD_INSTANCE_HOME}/OUD/logs'

# ==============================================================================
# Section: [WLS]
# Applied to Oracle WebLogic Server domains
# ==============================================================================

[WLS]

# WebLogic specific
export WLS_HOME="${ORACLE_HOME}/wlserver"
export DOMAIN_HOME="${WLS_DOMAIN_BASE}/${ORACLE_SID}"

# WebLogic aliases
alias wlsstart='${DOMAIN_HOME}/startWebLogic.sh'
alias wlsstop='${DOMAIN_HOME}/bin/stopWebLogic.sh'
alias wlsconsole='${DOMAIN_HOME}/bin/startManagedWebLogic.sh'
alias wlslogs='cd ${DOMAIN_HOME}/servers/AdminServer/logs'

