# Show current RMAN configuration
SHOW ALL;

# Apply custom SET commands (optional)
#<SET_COMMANDS>

RUN {
    # Allocate channels for backup (replaced by template processor)
    <ALLOCATE_CHANNELS>
    
    # restore archivelogs adjust sequence numbers accordingly 
    RESTORE ARCHIVELOG FROM SEQUENCE=<FIRST_SEQUENCE> UNTIL SEQUENCE=<LAST_SEQUENCE> THREAD=1;
    
    # Release channels (replaced by template processor)
    <RELEASE_CHANNELS>
}
